<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Battleship</title>
  </head>
  <body>
    <div id="info-displa">
      <p>Info: <span></span></p>
      <p>CPU Info: <span id="cpu-info"></span></p>
    </div>
    <div id="boards-container">
      <div id="player-board" class="board"></div>
      <div id="cpu-board" class="board"></div>
    </div>
    <button id="rotate">Rotate</button>
    <div id="ships">
      <div id="carrier" draggable="true"></div>
      <div id="battleship"></div>
      <div id="destroyer"></div>
      <div id="submarine"></div>
      <div id="patrol-boat"></div>
    </div>
    <div id="winning-message" class="winning-message">
      <div data-winning-message-text>You wins!</div>
      <button id="restart-button">Restart</button>
    </div>
  </body>
</html>
